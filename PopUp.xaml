<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymClock.PopUp"
             Title="PopUp">
    <Grid>
        <Frame WidthRequest="600" HeightRequest="400" BackgroundColor="#000080" CornerRadius="5" 
               BorderColor="Black" Padding="5">
            <Frame.GestureRecognizers>
                <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
            </Frame.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Name: ..." TextColor="White" FontSize="50"/>
                <Label Text="Alter: ..." TextColor="White" FontSize="50"/>
                <Label Text="Beruf: ..." TextColor="White" FontSize="50"/>
                <Label Text="Hobby: ..." TextColor="White" FontSize="50"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>