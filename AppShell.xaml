<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymClock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GymClock"
    xmlns:pages="clr-namespace:GymClock.Components.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="GymClock">

    <ShellContent
        Title="Menü"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Mitgliederübersicht"
        ContentTemplate="{DataTemplate pages:MemberOverview}"
        Route="MemberOverview" />

    <ShellContent
        Title="Einstellungen"
        ContentTemplate="{DataTemplate pages:Settings}"
        Route="Settings" />
    <ShellContent
        Title="Benutzer"
        ContentTemplate="{DataTemplate pages:UserOverview}"
        Route="UserOverview" />
    

</Shell>
