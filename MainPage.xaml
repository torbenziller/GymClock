<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gymClock="clr-namespace:GymClock"
             xmlns:ribbon="clr-namespace:GymClock.Components.Ribbon"
             x:Class="GymClock.MainPage"
             BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#1a1a1a}">

    <VerticalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

        <!-- RibbonBar bleibt unverändert -->
        <ribbon:RibbonBar x:Name="ribbonBar"/>

        <!-- Scrollbereich neu gestaltet -->
        <ScrollView  Grid.Row="1" VerticalScrollBarVisibility="Always">
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- Mitglieder-Anzeige verbessert -->
                <Frame BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                       BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#333333}"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="15"
                       HeightRequest="80">
                    <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                        <Label Grid.Column="0"
                               Text="Mitglieder im Studio"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"
                               VerticalOptions="Center"/>

                        <Frame Grid.Column="1"
                               BackgroundColor="#3498db"
                               CornerRadius="10"
                               Padding="20,5"
                               HasShadow="False">
                            <Label Text="400"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                        </Frame>
                    </Grid>
                </Frame>

                <!-- Dashboard-Container -->
                <Frame BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                       BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#333333}"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20"
                       HeightRequest="250">
                    <Grid RowDefinitions="Auto,*" RowSpacing="15">
                        <Label Text="Dashboard"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"
                               Grid.Row="0"/>

                        <Grid Grid.Row="1"
                              ColumnDefinitions="*,*,*"
                              ColumnSpacing="15">

                            <!-- Statistik-Karte 1 -->
                            <Frame Grid.Column="0"
                                   BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#252525}"
                                   BorderColor="{AppThemeBinding Light=#dee2e6, Dark=#404040}"
                                   CornerRadius="10"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Heutige Besucher"
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"/>
                                    <Label Text="156"
                                           FontSize="28"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#212529, Dark=#f8f9fa}"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Statistik-Karte 2 -->
                            <Frame Grid.Column="1"
                                   BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#252525}"
                                   BorderColor="{AppThemeBinding Light=#dee2e6, Dark=#404040}"
                                   CornerRadius="10"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Aktive Kurse"
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"/>
                                    <Label Text="8"
                                           FontSize="28"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#212529, Dark=#f8f9fa}"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Statistik-Karte 3 -->
                            <Frame Grid.Column="2"
                                   BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#252525}"
                                   BorderColor="{AppThemeBinding Light=#dee2e6, Dark=#404040}"
                                   CornerRadius="10"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Neue Mitglieder"
                                           FontSize="16"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"/>
                                    <Label Text="12"
                                           FontSize="28"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#212529, Dark=#f8f9fa}"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </Grid>
                </Frame>

                <!-- Schnellzugriff-Container -->
                <Frame BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                       BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#333333}"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Schnellzugriff"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"/>

                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15" RowDefinitions="Auto,Auto" RowSpacing="15">
                            <!-- Schnellzugriff-Buttons -->
                            <Button Grid.Row="0" Grid.Column="0"
                                    Text="Neues Mitglied"
                                    BackgroundColor="#3498db"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="10"
                                    Padding="10"
                                    />

                            <Button Grid.Row="0" Grid.Column="1"
                                    Text="Timer starten"
                                    BackgroundColor="#2ecc71"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="10"
                                    Padding="10"
                                    />

                            <Button Grid.Row="0" Grid.Column="2"
                                    Text="Mitgliederliste"
                                    BackgroundColor="#9b59b6"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="10"
                                    Padding="10"
                                    />

                            <Button Grid.Row="1" Grid.Column="0"
                                    Text="Einstellungen"
                                    BackgroundColor="#e74c3c"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="10"
                                    Padding="10"
                                    />

                            <Button Grid.Row="1" Grid.Column="1"
                                    Text="Tagesstatistik"
                                    BackgroundColor="#f39c12"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="10"
                                    Padding="10"
                                    />

                            <Button Grid.Row="1" Grid.Column="2"
                                    Text="Popup öffnen"
                                    BackgroundColor="#34495e"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="10"
                                    Padding="10"
                                    />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Neuigkeiten-Container -->
                <Frame BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                       BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#333333}"
                       CornerRadius="15"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Neuigkeiten"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"/>

                        <Frame BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#252525}"
                               BorderColor="{AppThemeBinding Light=#dee2e6, Dark=#404040}"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Neue Kurse ab nächster Woche"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#212529, Dark=#f8f9fa}"/>
                                <Label Text="Ab dem 24. März starten neue Yoga- und HIIT-Kurse. Jetzt anmelden!"
                                       TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame BackgroundColor="{AppThemeBinding Light=#f8f9fa, Dark=#252525}"
                               BorderColor="{AppThemeBinding Light=#dee2e6, Dark=#404040}"
                               CornerRadius="10"
                               Padding="15"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="Wartungsarbeiten"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#212529, Dark=#f8f9fa}"/>
                                <Label Text="Am 20. März bleibt der Saunabereich wegen Wartungsarbeiten geschlossen."
                                       TextColor="{AppThemeBinding Light=#6c757d, Dark=#adb5bd}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Popup bleibt unverändert -->
        <gymClock:NPopUp x:Name="popup" />
    </VerticalStackLayout>
</ContentPage>