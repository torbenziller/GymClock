<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymClock.NPopUp"
             x:Name="popupView"
             IsVisible="False"
             Opacity="0.0"
             Padding="10"
             VerticalOptions="End"
             HorizontalOptions="End"
             WidthRequest="300"
             HeightRequest="100">
    <Frame CornerRadius="12" BackgroundColor="#CCFFFFFF" Padding="15" HasShadow="True">
        <StackLayout Orientation="Horizontal" Spacing="15">
            

            <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                <Label Text="Neuer Check-In" FontAttributes="Bold" FontSize="16" TextColor="Black" />
                <Label Text="Max Mustermann" FontSize="14" TextColor="Gray" />
            </StackLayout>

            <Button Text="Details" Clicked="OnDetailsButtonClicked" HeightRequest="32"
                    BackgroundColor="#007AFF" TextColor="White" CornerRadius="8"
                    VerticalOptions="Center" Padding="10,0" />
        </StackLayout>
    </Frame>
</ContentView>
