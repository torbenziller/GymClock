<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymClock.Components.Pages.Settings"
             Title="Einstellungen">
    <ScrollView>
        <VerticalStackLayout>
            <Switch HorizontalOptions="Center"></Switch>
            <Grid>
                <Label Grid.Row="0" Grid.Column="0">Wie viele Sekunden Soll das PopUp erscheinen</Label>
                <Entry x:Name="entry" Grid.Row="0" Grid.Column="1" Placeholder="" WidthRequest="40" MaxLength="3"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>