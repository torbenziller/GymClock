<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymClock.Components.Pages.Settings"
             Title="Einstellungen"
             BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#1a1a1a}">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            

            <!-- Benutzer Sektion -->
            <Frame BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#333333}" 
                   BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                   CornerRadius="15" 
                   Padding="15" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Benutzerverwaltung" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"/>

                    <Button Text="Benutzer verwalten"
                            Clicked="SettingUserOverview"
                            BackgroundColor="#3498db"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="10"
                            Padding="20,10"
                            HorizontalOptions="Start"/>


                </VerticalStackLayout>
            </Frame>

            <!-- Über die App -->
            <Frame BorderColor="{AppThemeBinding Light=#e0e0e0, Dark=#333333}" 
                   BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
                   CornerRadius="15" 
                   Padding="15" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Über GymClock" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"/>

                    <Label Text="Version 1.0.0" 
                           TextColor="{AppThemeBinding Light=#555555, Dark=#dddddd}"/>

                    <Button Text="Nach Updates suchen"
                            
                            BackgroundColor="#34495e"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="10"
                            Padding="20,10"
                            HorizontalOptions="Start"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>